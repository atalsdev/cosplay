---
import faqContent from './content/faq-content.json';

interface Props {
  productTitle: string;
  language: string;
}

const { productTitle, language } = Astro.props;

const content = faqContent[language] || faqContent.en;
---

<div class="bg-white border border-gray-100 rounded-xl p-6 shadow-sm">
  <h3 class="text-xl font-bold text-gray-900 mb-4">{content.title}</h3>
  <div class="space-y-4">
    {content.faqs.map((faq) => (
      <div class="border-b border-gray-100 last:border-0 pb-4 last:pb-0">
        <h4 class="font-medium text-gray-900 mb-2">{faq.q}</h4>
        <p class="text-gray-600">{faq.a}</p>
      </div>
    ))}
  </div>
</div>