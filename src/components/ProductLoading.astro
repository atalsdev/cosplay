---
interface Props {
  isVisible?: boolean;
}

const { isVisible = false } = Astro.props;
---
<div 
  class:list={[
    "product-loading fixed inset-0 bg-white z-50",
    { "hidden": !isVisible }
  ]}
>
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Image skeleton -->
      <div class="aspect-square bg-gray-200 rounded-2xl"></div>
      
      <!-- Content skeleton -->
      <div class="space-y-6">
        <div class="space-y-4">
          <div class="h-8 bg-gray-200 rounded w-3/4"></div>
          <div class="h-4 bg-gray-200 rounded w-1/4"></div>
        </div>
        
        <div class="h-12 bg-gray-200 rounded w-1/3"></div>
        
        <div class="space-y-4">
          <div class="h-12 bg-gray-200 rounded"></div>
          <div class="h-12 bg-gray-200 rounded"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-loading {
    transition: opacity 0.3s ease-in-out;
  }
  
  .product-loading.hidden {
    opacity: 0;
    pointer-events: none;
    display: none;
  }
</style> 