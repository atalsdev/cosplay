---
interface Category {
  id: string;
  name: string;
  description: string;
  image: string;
  link: string;
}

interface Props {
  title: string;
  description: string;
  categories: Category[];
}

const { title, description, categories } = Astro.props;
---

<section class="py-24 px-4 bg-gradient-to-br from-purple-50 via-white to-pink-50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1 mb-4 text-sm font-medium rounded-full bg-blue-50 text-blue-600">
        Browse Categories
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {categories.map((category) => (
        <a
          href={category.link}
          class="group relative overflow-hidden rounded-2xl aspect-[4/3] bg-white shadow-sm hover:shadow-xl transition-all duration-300"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600/10 to-purple-600/10 mix-blend-multiply"></div>
          <img
            src={category.image}
            alt={category.name}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent flex flex-col justify-end p-8 text-white">
            <h3 class="text-2xl font-bold mb-3 transform group-hover:translate-x-2 transition-transform duration-300">
              {category.name}
            </h3>
            <p class="text-gray-200 transform group-hover:translate-x-2 transition-transform duration-300 delay-75">
              {category.description}
            </p>
            <div class="mt-4 flex items-center text-sm font-medium text-white/80 transform translate-y-8 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-300">
              Explore Category 
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>