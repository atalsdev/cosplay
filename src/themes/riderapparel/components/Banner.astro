---
import { Button } from './ui/Button';

interface Props {
  headline: string;
  description: string;
  backgroundImage: string;
  button1Text: string;
  button1Link: string;
  button2Text?: string;
  button2Link?: string;
}

const { 
  headline, 
  description, 
  backgroundImage,
  button1Text,
  button1Link,
  button2Text,
  button2Link
} = Astro.props;
---

<section 
  class="relative py-32 px-4 overflow-hidden"
  style={`background-image: url(${backgroundImage}); background-size: cover; background-position: center;`}
>
  <!-- Light Overlay -->
  <div class="absolute inset-0 bg-white/80"></div>
  
  <!-- Content -->
  <div class="relative max-w-7xl mx-auto">
    <div class="max-w-2xl">
      <h2 class="text-4xl md:text-5xl font-['Oswald'] uppercase tracking-wide text-gray-900 mb-6 leading-tight">
        {headline}
      </h2>
      
      <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed">
        {description}
      </p>
      
      <div class="flex flex-wrap gap-4">
        <a 
          href={button1Link}
          class="inline-flex items-center px-8 py-3 bg-gray-900 text-white font-['Oswald'] uppercase tracking-wide hover:bg-gray-800 transition-colors duration-300"
        >
          {button1Text}
        </a>
        
        {button2Text && button2Link && (
          <a 
            href={button2Link}
            class="inline-flex items-center px-8 py-3 border-2 border-gray-900 text-gray-900 font-['Oswald'] uppercase tracking-wide hover:bg-gray-900 hover:text-white transition-colors duration-300"
          >
            {button2Text}
          </a>
        )}
      </div>
    </div>
  </div>

  <!-- Decorative Line -->
  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-gray-900/20 to-transparent"></div>
</section>

<style>
  section {
    background-attachment: fixed;
  }
</style>