---
import { Button } from './ui/Button';
import { Play } from 'lucide-react';

interface Props {
  headline: string;
  description: string;
  videoUrl: string;
  buttonText?: string;
  buttonLink?: string;
  headlinePosition?: 'left' | 'center' | 'right';
  textPosition?: 'left' | 'center' | 'right';
}

const { 
  headline, 
  description, 
  videoUrl,
  buttonText,
  buttonLink,
  headlinePosition = 'center',
  textPosition = 'center'
} = Astro.props;

const alignmentClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};
---

<section class="py-20 px-4 md:px-8 bg-gray-900">
  <div class="max-w-6xl mx-auto">
    <div class={`max-w-3xl mx-auto mb-12 ${alignmentClasses[headlinePosition]}`}>
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {headline}
      </h2>
      <p class={`text-lg text-gray-300 ${alignmentClasses[textPosition]}`}>
        {description}
      </p>
    </div>

    <div class="relative aspect-video rounded-xl overflow-hidden">
      <iframe
        src={videoUrl}
        class="absolute inset-0 w-full h-full"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>

    {buttonText && buttonLink && (
      <div class="mt-8 text-center">
        <a 
          href={buttonLink}
          class="inline-flex items-center gap-2 bg-white text-gray-900 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          <Play className="w-5 h-5" />
          {buttonText}
        </a>
      </div>
    )}
  </div>
</section>