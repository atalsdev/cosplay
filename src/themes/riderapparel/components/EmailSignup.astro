---
import { Button } from './ui/Button';
import { Mail } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  backgroundImage: string;
  formAction: string;
  buttonText: string;
}

const { title, description, backgroundImage, formAction, buttonText } = Astro.props;
---

<section 
  class="relative py-20 px-4 md:px-8"
  style={`background-image: url(${backgroundImage}); background-size: cover; background-position: center;`}
>
  <div class="absolute inset-0 bg-black/60"></div>
  <div class="relative max-w-3xl mx-auto text-center text-white">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
    <p class="text-lg mb-8">{description}</p>
    
    <form 
      action={formAction}
      method="POST"
      class="flex flex-col md:flex-row gap-4 justify-center items-center"
    >
      <div class="relative w-full md:w-auto flex-1 max-w-sm">
        <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
          <Mail class="w-5 h-5" />
        </div>
        <input
          type="email"
          placeholder="Enter your email"
          required
          class="w-full pl-10 pr-4 py-3 rounded-lg bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder:text-gray-300 focus:outline-none focus:ring-2 focus:ring-white/30"
        />
      </div>
      <Button type="submit" size="lg">
        {buttonText}
      </Button>
    </form>
  </div>
</section>