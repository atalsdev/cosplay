---
interface Props {
  items: any[];
  config: any;
}

const { items, config } = Astro.props;
const filteredItems = items?.filter(item => item[config.key_input]);
---

<div class="max-w-xl mx-auto mb-12">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <label for="itemSelect" class="block text-sm font-medium text-gray-700 mb-2">Choose Your Bike Model</label>
    <select 
      id="itemSelect" 
      class="mt-1 block w-full pl-3 pr-10 py-3 text-base border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
    >
      <option value="">Select an item...</option>
      {filteredItems?.map((item) => (
        <option value={item[config.key_input]}>{item[config.key_input]}</option>
      ))}
    </select>
  </div>
</div> 