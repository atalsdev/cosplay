---
import { Button } from './ui/Button';
import { Mail } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  backgroundImage: string;
  formAction: string;
  buttonText: string;
}

const { title, description, backgroundImage, formAction, buttonText } = Astro.props;
---

<section 
  class="relative py-24 px-4 md:px-8"
  style={`background-image: url(${backgroundImage}); background-size: cover; background-position: center;`}
>
  <div class="absolute inset-0 bg-gradient-to-b from-black/70 to-black/50"></div>
  <div class="relative max-w-4xl mx-auto text-center text-white">
    <span class="inline-block px-4 py-1 mb-6 text-sm font-medium rounded-full bg-white/10 backdrop-blur-sm">
      Welcome to Our Digital Store
    </span>
    <h2 class="text-4xl md:text-5xl font-bold mb-6">{title}</h2>
    <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto text-gray-200">{description}</p>
    
    <form 
      action={formAction}
      method="POST"
      class="flex flex-col md:flex-row gap-4 justify-center items-center"
    >
      <div class="relative w-full md:w-auto flex-1 max-w-sm">
        <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
          <Mail class="w-5 h-5" />
        </div>
        <input
          type="email"
          placeholder="Enter your email for exclusive digital product updates"
          required
          class="w-full pl-10 pr-4 py-3 rounded-lg bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder:text-gray-200 focus:outline-none focus:ring-2 focus:ring-white/30 transition-all"
        />
      </div>
      <Button type="submit" size="lg" class="bg-white text-gray-900 hover:bg-gray-100">
        {buttonText}
      </Button>
    </form>
    <p class="mt-4 text-sm text-gray-300">Join our community of digital creators and entrepreneurs</p>
  </div>
</section>