---
import { Button } from './ui/Button';
import { Mail } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  backgroundImage: string;
  formAction: string;
  buttonText: string;
}

const { title, description, backgroundImage, formAction, buttonText } = Astro.props;
---

<section 
  class="relative py-32 overflow-hidden"
  style={`background-image: url(${backgroundImage}); background-size: cover; background-position: center;`}
>
  <!-- Elegant Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70 backdrop-blur-sm"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-['Montserrat'] font-light uppercase tracking-[0.25em] text-white/90 mb-6">
      {title}
    </h2>
    
    <p class="text-lg text-white/70 font-light tracking-wide mb-12 max-w-2xl mx-auto">
      {description}
    </p>

    <!-- Form - Keeping original functionality intact -->
    <form 
      action={formAction}
      method="POST"
      class="max-w-md mx-auto"
    >
      <div class="flex flex-col sm:flex-row gap-4">
        <input
          type="email"
          name="email"
          required
          placeholder="Enter your email"
          class="flex-1 px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 
                 text-white placeholder-white/40 focus:outline-none focus:border-white/40
                 font-light tracking-wide text-sm transition-all duration-500"
        />
        <button
          type="submit"
          class="px-12 py-4 bg-white text-gray-900 font-['Montserrat'] uppercase tracking-[0.2em] text-sm
                 hover:bg-white/90 transition-all duration-500 font-light"
        >
          {buttonText}
        </button>
      </div>
    </form>

    <!-- Decorative Elements -->
    <div class="absolute bottom-0 left-0 w-full">
      <div class="h-px bg-gradient-to-r from-white/20 via-white/10 to-transparent"></div>
    </div>
  </div>
</section>

<style>
  /* Smooth text rendering */
  h2, p {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Input focus ring */
  input:focus {
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
  }

  /* Form element transitions */
  input, button {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Dark mode optimization */
  section {
    color-scheme: dark;
  }

  /* Placeholder text fade */
  input::placeholder {
    transition: opacity 0.3s ease;
  }

  input:focus::placeholder {
    opacity: 0.5;
  }
</style>